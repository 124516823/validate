\$(${1:'form'}).validate({
	eachInvalid : function() {

		\$(this).closest(${2:'.form-group'}).addClass(${3:'has-error'});

	},
	eachValid : function() {

		\$(this).closest(${4:'.form-group'}).removeClass(${5:'has-error'});

	}
});
